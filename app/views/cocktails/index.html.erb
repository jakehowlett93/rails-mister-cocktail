<h1>Cocktails</h1>
<%= link_to "New Cocktail", new_cocktail_path, class: "glass-button", id: "new-btn" %>

<% cocktails_subarray = @cocktails.each_slice(6).to_a %>




<div id="carouselExampleControls" class="carousel slide" data-interval="false">
  <div class="carousel-inner">
    <% cocktails_subarray.each_with_index do |arr, index| %>
      <% first_slide = index == 0 ? true : false %>
      <% if first_slide %>
        <div class="carousel-item active">
          <div class="carousel-container">
            <% arr.each do |cocktail| %>
              <div class="cocktail-card">
                <%= cocktail.name %>
              </div>
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="carousel-item">
          <%= arr %>
        </div>
      <% end %>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>