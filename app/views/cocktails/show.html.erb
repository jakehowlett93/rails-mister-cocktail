<div class="link-wrapper">
  <%= link_to "New Cocktail", new_cocktail_path, class: "glass-button new-btn" %>
</div>
<%= link_to 'back', cocktails_path, class: "glass-button back-btn" %>
<div class="show-cocktail-card">
  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
  <h1><%= @cocktail.name %></h1>
  <%= big_photo_for(@cocktail) %>
  <ul>
    <h5>Ingredients</h5>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <div>
          <%= dose.description %>
          <%= dose.ingredient.name %>
          <%= link_to dose_path(dose), class: "delete-btn", method: :delete, data: { confirm: "Are you sure?"} do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
  <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-secondary" %>
</div>


